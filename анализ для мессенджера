// messenger_interface.js
window.addEventListener('message', (event) => {
  if (event.data.type === 'SYNC_DATA') {
    // –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ –∏–∑ –æ—Å–Ω–æ–≤–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã
    members = event.data.members;
    payments = event.data.payments;
    transactions = event.data.transactions;
    
    // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º –≤ —Ñ–æ—Ä–º–∞—Ç –º–µ—Å—Å–µ–Ω–¥–∂–µ—Ä–∞
    const chatData = transformToChatFormat(members, payments, transactions);
    renderChats(chatData);
  }
});

function transformToChatFormat(members, payments, transactions) {
  return members.map(member => {
    const memberPayments = payments.filter(p => p.memberId === member.id);
    const memberTransactions = transactions.filter(t => 
      memberPayments.some(p => p.id === t.paymentId)
    );
    
    return {
      ...member,
      operations: memberPayments.map(payment => ({
        ...payment,
        transactions: memberTransactions.filter(t => t.paymentId === payment.id)
      }))
    };
  });
}
